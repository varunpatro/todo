

<h3>
  <strong></strong>
  <%= @list.name %>
</h3>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="lead">Tasks</th>
      <th class="lead">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @list.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to ' SHOW TASKS', task, class: "btn btn-primary" %>
        <%= link_to ' EDIT', edit_task_path(task), class: "btn btn-warning" %>
        <%= link_to ' DELETE', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= render 'tasks/form' %>

