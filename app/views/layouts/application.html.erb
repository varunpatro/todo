<!DOCTYPE html>
<html>
	<head>
		<title>Todo</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
	</head>
	<body>
		<div class="container">
			<p id="notice"><%= notice %></p>
			<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			<div class="container"><div class="navbar">
				<div class="navbar-inner">
					<ul class="nav nav-tabs">
						<% if session[:logged_in?] %>
						<li><a href=<%= lists_path %>>Lists</a></li>
						<li><a href=<%= tasks_path %>>Tasks</a></li>
						<li><a href=<%= tasks_search_path %>>Search Tasks</a></li>
						<li><a href=<%= tags_path %>>Tags</a></li>
						<li class="pull-right"><a href=<%= users_logout_path %>>Logout</a></li>
						<li class="pull-right"><a href=<%= users_path %>>Welcome <%= session[:user_name] %>!</a></li>
						<% else  %>
						<li class="pull-right"><a href=<%= users_login_path %>>Login<span class="glyphicon glyphicon-login"></span></a></li>
						<li class="pull-right"><a href=<%= users_signup_path %>>Sign Up</a></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<%= yield %>
	</div>
</body>
</html>