<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :list_id %><br>
    <%= select("task", "list_id", List.all.collect { |l| [l.name, l.id ] }) %>
  </div>

  <div class="field">
    <%= f.label :tag %><br>
    <%= f.text_field :tag %>
  </div>

  <div class="field">
    <%= check_box_tag(:starred?) %>
    <%= label_tag(:starred?, "Star") %>
    <%= check_box_tag(:archived?) %>
    <%= label_tag(:archived?, "Archive") %>
    <%= check_box_tag(:done?) %>
    <%= label_tag(:done?, "Done") %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
