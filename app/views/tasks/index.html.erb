
<h1>Listing Tasks</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if (@tasks.count > 0) %>
    <% @tasks.each do |task| %>
      <% if (task.list.user_id == session[:user_id]) %>
      <tr>  
        <td><%= task.name %></td>
        <td><%= link_to task.list.name, task.list %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
      <% end %>
    <% end %>
  <% else %>
    <p>No tasks to show! Make a new one.</p>
  <% end %>
  </tbody>
</table>

<br>

<%= render 'form' %>
